{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react-svg/recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "React": "writable"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "no-unused-vars": [2, {
            "args": "none",
            "vars": "all"
        }],
        "no-console": [2, {
            "allow": ["info", "warn", "error"]
        }]
    }
}